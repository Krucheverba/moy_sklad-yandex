# МойСклад API Configuration
# Получите эти данные в настройках вашего аккаунта МойСклад
MOYSKLAD_BASE=https://api.moysklad.ru/api/remap/1.2
MOYSKLAD_LOGIN=your_moysklad_login
MOYSKLAD_PASSWORD=your_moysklad_password

# МойСклад Organization and Store IDs
# Найдите эти ID в МойСклад через API или в URL при просмотре организации/склада
STORE_ID=your_store_uuid
ORG_ID=your_organization_uuid

# Yandex.Market API Configuration
# Получите токен в личном кабинете Яндекс.Маркет (Настройки -> API)
YANDEX_TOKEN=your_yandex_oauth_token
YANDEX_CAMPAIGN_ID=your_campaign_id

# Webhook Security (optional)
# Секрет для проверки подписи webhook от Яндекс.Маркет
# Если не указан, проверка подписи будет отключена
WEBHOOK_SECRET=your_webhook_secret

# Server Configuration
# Порт, на котором будет работать webhook сервер (по умолчанию 3000)
PORT=3000
